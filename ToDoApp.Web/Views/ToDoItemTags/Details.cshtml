@model ToDoApp.Web.ViewModels.ToDoItemTagViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ToDoItemTag</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("To-Do item")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToDoItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Tag")
        </dt>
