@model IEnumerable<ToDoApp.Web.ViewModels.ToDoItemTagViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("To-Do item")
            </th>
            <th>
                @Html.DisplayName("Tag")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToDoItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TagName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { ToDoItemId = item.ToDoItemId, TagId = item.TagId }) |
                @Html.ActionLink("Details", "Details", new { ToDoItemId = item.ToDoItemId, TagId = item.TagId }) |
                @Html.ActionLink("Delete", "Delete", new { ToDoItemId = item.ToDoItemId, TagId = item.TagId })
            </td>
        </tr>
}
    </tbody>
</table>
